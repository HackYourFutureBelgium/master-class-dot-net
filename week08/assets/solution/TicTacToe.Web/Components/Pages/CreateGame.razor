@page "/create-game"
@inject NavigationManager Nav

<h3>Create / Join Multiplayer Game</h3>

<div class="mb-3">
    <label>Game Id (room code)</label>
    <input class="form-control" @bind="_gameId" placeholder="e.g. abc123" />
</div>

<button class="btn btn-primary" @onclick="Go">Go</button>

@code {
    private string _gameId = Guid.NewGuid().ToString("N")[..6];

    private void Go() => Nav.NavigateTo($"/multiplayer/{_gameId}");
}